<h2 class="text-2xl font-semibold text-center mb-4">Log in</h2>

<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block font-medium text-gray-700" %>
      <%= f.email_field :email, class: "w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-medium text-gray-700" %>
      <%= f.password_field :password, class: "w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-sm text-gray-600" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= f.submit "Log in", class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
