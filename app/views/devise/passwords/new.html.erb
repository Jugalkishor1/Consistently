<h2 class="text-2xl font-semibold text-center mb-4">Forgot your password?</h2>

<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block font-medium text-gray-700" %>
      <%= f.email_field :email, class: "w-full mt-1 border-gray-300 rounded-md shadow-sm" %>
    </div>

    <div class="text-center">
      <%= f.submit "Send me reset password instructions", class: "bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
