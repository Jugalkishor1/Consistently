<h1 class="text-xl font-semibold mb-4">Your Habits</h1>

<%= link_to 'New Habit', new_habit_path, class: "text-blue-600 hover:underline inline-block mb-4" %>

<ul class="space-y-2">
  <% @habits.each do |habit| %>
    <li class="border p-3 rounded">
      <div class="flex justify-between items-center">
        <span class="font-medium"><%= habit.name %></span>
        <div class="space-x-2">
          <%= link_to 'Edit', edit_habit_path(habit), class: "text-blue-500 hover:underline" %>
          <%= link_to 'Delete', habit_path(habit), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-500 hover:underline" %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
